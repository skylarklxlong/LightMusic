<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bottomSheetNormalBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bottom_playbar_img"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp" />

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="41dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bottom_playbar_song_name"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_bottom_playbar_song_author"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:ellipsize="end"
                android:maxLength="20"
                android:singleLine="true"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_bottom_playbar_playlist"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/playbar_btn_playlist" />

        <ImageView
            android:id="@+id/iv_bottom_playbar_playbtn"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/playbar_btn_play" />

        <ImageView
            android:id="@+id/iv_bottom_playbar_playnext"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/playbar_btn_next" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bottom_playbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:progress="0" />

</LinearLayout>