<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <ImageView
            android:id="@+id/iv_item_tab_net_new_song_art"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/notification_bak"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_tab_net_new_song_listen_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:text="666"
                android:textColor="@color/text_color_02"
                android:textSize="12sp" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_item_tab_net_new_song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="666667"
        android:textColor="@color/text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_item_tab_net_new_song_subname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="666667"
        android:textColor="@color/text_color_01"
        android:textSize="10sp" />
</LinearLayout>